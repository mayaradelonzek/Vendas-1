<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:theme="@style/ToolbarTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Home"
            app:titleTextColor="@android:color/white" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_header" />

        <View
            android:id="@+id/v_header"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/view_pager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:importantForAccessibility="no"
            android:src="@drawable/logo_fundatec"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/hi_usr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="@+id/v_header"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:id="@+id/tv_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_hello"
                android:textColor="#283593"
                android:textSize="22sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_logged_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="@string/home_user_default"
                android:textColor="#283593"
                android:textSize="22sp"
                android:textStyle="italic"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginStart="16dp"
            android:text="@string/home_bank_balance"
            android:textColor="@color/blue_fundatec"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="@id/v_header"
            app:layout_constraintTop_toBottomOf="@id/v_header" />

        <TextView
            android:id="@+id/tv_account_place_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_balance_available"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="@id/v_header"
            app:layout_constraintTop_toBottomOf="@id/tv_account_balance" />

        <LinearLayout
            android:id="@+id/layout_btns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="60dp"
            app:layout_constrainedHeight="true"
            android:showDividers="middle"
            android:divider="@drawable/empty_tall_divider"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_balance">

            <ImageButton
                android:id="@+id/new_acc"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="22dp"
                android:background="@drawable/btn_icon_round"
                android:src="@drawable/ic_new_item"
                android:text="@string/nova_compra"
                android:contentDescription="@string/nova_compra" />

            <ImageButton
                android:id="@+id/list_transac"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="18dp"
                android:background="@drawable/btn_icon_round"
                android:src="@drawable/ic_list_transac"
                android:contentDescription="@string/list_transac" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_texts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintTop_toBottomOf="@id/layout_btns"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/text_new_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nova_compra"
                android:textSize="16sp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/text_transac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/list_transac"
                android:textSize="16sp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/gray"/>

        </LinearLayout>








    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>