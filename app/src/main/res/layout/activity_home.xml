<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:theme="@style/ToolbarTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Home"
            app:titleTextColor="@android:color/white" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tab_layout" />

        <View
            android:id="@+id/v_header"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/gray_fundatec"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:importantForAccessibility="no"
            android:src="@drawable/logo_fundatec"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="@+id/v_header"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/home_hello" />

        <TextView
            android:id="@+id/tv_logged_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="8dp"
            android:text="@string/home_user_default"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintBottom_toBottomOf="@+id/v_header"
            app:layout_constraintLeft_toLeftOf="@+id/tv_hello" />

        <TextView
            android:id="@+id/tv_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:text="@string/home_bank_balance"
            android:textColor="@color/blue_fundatec"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="@id/v_header"
            app:layout_constraintTop_toBottomOf="@id/v_header" />

        <TextView
            android:id="@+id/tv_account_place_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_balance_available"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="@id/v_header"
            app:layout_constraintTop_toBottomOf="@id/tv_account_balance" />

        <Button
            android:id="@+id/list_transac"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="16dp"
            android:background = "@drawable/roundedbutton"
            android:text="@string/list_transac"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_header"/>

        <Button
            android:id="@+id/new_acc"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="16dp"
            android:background="@color/yellow2_fundatec"
            android:text="@string/nova_compra"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_header" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>