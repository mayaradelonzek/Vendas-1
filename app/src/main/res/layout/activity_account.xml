<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".account.AccountActivity">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:indeterminate = "true"
            android:max="100"
            android:minWidth="200dp"
            android:minHeight="50dp"
            android:visibility="invisible"
            android:progress="0" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/create_acc_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:theme="@style/ToolbarTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Nova Compra"
            app:titleTextColor="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_login"
            android:layout_marginTop="500dp"
            app:layout_constraintTop_toBottomOf="@id/create_acc_toolbar">

        </LinearLayout>

        <TextView
            android:id="@+id/msg_new_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:text="@string/o_que_deseja_comprar"
            android:textStyle="italic"
            android:textSize="40sp"
            android:textColor="@color/blue_fundatec"
            app:layout_constraintBottom_toTopOf="@id/ti_saldo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_acc_toolbar" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_saldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:textColorHint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_acc_toolbar">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/valueET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_fundatec"
                android:hint="@string/nova_compra_valor"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:imeOptions="actionDone"

                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/nova_compra_tipos_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/spinner_list_bg"
            android:dropDownVerticalOffset="50dp"
            app:layout_constraintBottom_toTopOf="@+id/nova_compra_btn_comprar"
            app:layout_constraintTop_toBottomOf="@+id/ti_saldo" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nova_compra_btn_comprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedbutton"
            android:text="@string/nova_compra_btn_comprar"
            android:paddingHorizontal="40dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nova_compra_tipos_spinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
